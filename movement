using UnityEngine;

public class PlayerMovement : MonoBehaviour
{
    //player movement 
    public float movemement;
    public Rigidbody rb;
    public float FowardFloat = 2000f;
    // Update is called once per frame
    void FixedUpdate()
    {
        rb.AddForce(0, 0, movemement * Time.deltaTime, ForceMode.VelocityChange);

        if (Input.GetKey("d")) {
            rb.AddForce(movemement * Time.deltaTime, 0, 0, ForceMode.VelocityChange);
        }
        
        if (Input.GetKey("a"))
        {
            rb.AddForce(-movemement * Time.deltaTime, 0, 0, ForceMode.VelocityChange);
        }
        
        
    }
}
